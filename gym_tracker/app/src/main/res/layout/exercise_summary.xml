<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView android:id="@+id/exercise_icon"
               android:layout_width="100dp"
               android:layout_height="100dp"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:id="@+id/time"
                      android:text="25"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
            <TextView android:text="min"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:id="@+id/weight"
                      android:text="35"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
            <TextView android:text="lbs"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:id="@+id/sets"
                      android:text="4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
            <TextView android:text="sets"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:id="@+id/reps"
                      android:text="10"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
            <TextView android:text="reps"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="@dimen/exercises_gap"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView android:id="@+id/exercise_icon"
               android:layout_gravity="center_horizontal"
               android:layout_width="100dp"
               android:layout_height="100dp"/>
    <LinearLayout android:layout_gravity="center_horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/exercise_details_gap"
                      android:orientation="vertical">
            <TextView android:id="@+id/duration"
                      android:textSize="@dimen/exercise_details_text_size"
                      android:background="@drawable/round_corner"
                      android:paddingLeft="@dimen/exercise_details_stat_padding"
                      android:paddingRight="@dimen/exercise_details_stat_padding"
                      android:textColor="@color/md_white_1000"
                      android:textStyle="bold"
                      android:layout_gravity="center_horizontal"
                      android:textAlignment="center"
                      android:minWidth="@dimen/exercise_details_stat_min_width"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"/>
            <TextView android:text="mins"
                      android:layout_marginTop="@dimen/exercise_details_label_margin_top"
                      android:layout_gravity="center_horizontal"
                      android:textAlignment="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/exercise_details_gap"
                      android:orientation="vertical">
            <TextView android:id="@+id/weight"
                      android:textSize="@dimen/exercise_details_text_size"
                      android:background="@drawable/round_corner"
                      android:paddingLeft="@dimen/exercise_details_stat_padding"
                      android:paddingRight="@dimen/exercise_details_stat_padding"
                      android:textColor="@color/md_white_1000"
                      android:textStyle="bold"
                      android:layout_gravity="center_horizontal"
                      android:textAlignment="center"
                      android:minWidth="@dimen/exercise_details_stat_min_width"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"/>
            <TextView android:text="lbs"
                      android:layout_marginTop="@dimen/exercise_details_label_margin_top"
                      android:layout_gravity="center_horizontal"
                      android:textAlignment="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/exercise_details_gap"
                      android:orientation="vertical">
            <TextView android:id="@+id/sets"
                      android:textSize="@dimen/exercise_details_text_size"
                      android:background="@drawable/round_corner"
                      android:paddingLeft="@dimen/exercise_details_stat_padding"
                      android:paddingRight="@dimen/exercise_details_stat_padding"
                      android:textColor="@color/md_white_1000"
                      android:textStyle="bold"
                      android:layout_gravity="center_horizontal"
                      android:textAlignment="center"
                      android:minWidth="@dimen/exercise_details_stat_min_width"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"/>
            <TextView android:text="sets"
                      android:layout_marginTop="@dimen/exercise_details_label_margin_top"
                      android:layout_gravity="center_horizontal"
                      android:textAlignment="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/exercise_details_gap"
                      android:orientation="vertical">
            <TextView android:id="@+id/reps"
                      android:textSize="@dimen/exercise_details_text_size"
                      android:background="@drawable/round_corner"
                      android:paddingLeft="@dimen/exercise_details_stat_padding"
                      android:paddingRight="@dimen/exercise_details_stat_padding"
                      android:textColor="@color/md_white_1000"
                      android:textStyle="bold"
                      android:layout_gravity="center_horizontal"
                      android:textAlignment="center"
                      android:minWidth="@dimen/exercise_details_stat_min_width"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"/>
            <TextView android:text="reps"
                      android:layout_marginTop="@dimen/exercise_details_label_margin_top"
                      android:layout_gravity="center_horizontal"
                      android:textAlignment="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>